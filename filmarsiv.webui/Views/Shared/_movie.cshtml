@model Movie

<div class="card mb-2">
    <img class="card-img-top" src="~/img/@Model.ImageUrl" alt="">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <small class="text-muted">
            <i class="card-title"></i>@Model.Language
        </small>
    </div>
    <div class="card-footer text-center">
        <a asp-controller="Movie" asp-action="details" asp-route-url="@Model.Url" class="btn btn-primary btn-sm">Details</a>
    </div>
</div>   