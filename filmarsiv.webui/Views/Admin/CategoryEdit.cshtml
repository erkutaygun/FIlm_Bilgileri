@model CategoryModel
<h1 class="h3">Edit Category</h1>
<hr>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Admin" asp-action="CategoryEdit" method="POST">
        <div asp-asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" name="CategoryId" value="@Model.CategoryId">
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Name" >
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Url" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Url">
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Save Category</button>
            </div>
        </div>
          <div id="movies">
            @for (int i = 0; i < Model.Movies.Count; i++)
            {
            <input type="hidden" name="Movies[@i].MovieId" value="@Model.Movies[@i].MovieId">  
            <input type="hidden" name="Movies[@i].ImageUrl" value="@Model.Movies[@i].ImageUrl">   
            <input type="hidden" name="Movies[@i].Name" value="@Model.Movies[@i].Name">   
            <input type="hidden" name="Movies[@i].Language" value="@Model.Movies[@i].Language">   
            }
         </div>
    </form>
    </div>
    <div class="col-md-8">
        <div class="row">
    <div class="col-md-12">
        
            <table class="table table-bordered table-sm"></table>
                <thead>
                    <tr>
                        <td style="width: 30px;">Id</td>
                        <td style="width: 100px;">Image</td>
                        <td>Name</td>
                        <td style="width: 20px;">Language</td>
                         <td style="width: 150px;"></td>
                    </tr>
                </thead>
                     <tbody>
                     @if (Model.Movies.Count>0)
                     {
                         @foreach (var item in Model.Movies)
                         {
                            <td>@item.MovieId</td>
                            <td><img src="~/img/@item.ImageUrl" width="80"></td>
                            <td>@item.Name</td>
                            <td>@item.Language</td>
                            <td>
                            <a href="/admin/movies/@item.MovieId" class="btn btn-primary btn-sm mr-2">Edit</a>
                            <form action="/admin/deletefromcategory" method="POST" style="display: inline;">
                                <input type="hidden" name="movieId" value="@item.MovieId">
                                <input type="hidden" name="categoryId" value="@Model.CategoryId">
                                <button type="submit class="btn btn-danger btn-sm">Delete</button>
                            </form>
                            </td>
                            }
                            }else{
                                <div class="alert alert-warning">
                                    <h3>No Movies</h3>
                                </div>
                            }
                            
                        </tbody>
                    </table>
                </div>
            </div>
    </div>
</div>
@section Scripts
{
    <script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}