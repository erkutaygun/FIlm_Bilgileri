@model MovieDetailModel
<div class="row">
    <div class="col-md-3">
        <img src="~/img/@Model.Movie.ImageUrl" class="img-fluid">
    </div>
    <div class="col-md-9">                
            <h1 class="mb-3">@Model.Movie.Name</h5> <hr>
            @foreach (var item in Model.Categories)
            {
                <a asp-controller="Movie" asp-action="list" asp-route-category="@item.Url" class="btn btn-link p-0 mb-3">@item.Name</a>
            }                
            <div class="mb-3">
                <hr>
                <h6 class="text-primary mb-3">
                    <i class="mb-2">Years = </i>@Model.Movie.Years
                </h6>
                <hr>
                <h6 class="text-primary mb-3">
                    <i class="mb-2">Runtime =</i>@Model.Movie.RunTime
                </h6>
                <hr>
                <h6 class="text-primary mb-3">
                    <i class="mb-2">Imdb rating =</i>@Model.Movie.ImdbRating
                </h6>
                <hr>
                <h6 class="text-primary mb-3">
                    <i class="mb-2">Language = </i>@Model.Movie.Language
                </h6>
                
            </h6>
    </div>
</div>
<div class="row">
    <div class="col-md-12 p-5">
        <p class="p-3">@Html.Raw(Model.Movie.Details)</p>
    </div>
</div>